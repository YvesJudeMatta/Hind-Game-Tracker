<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSetup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/activity_all_margin"
    tools:context=".Fragments.HindSetupFragment">

    <TextView
        android:id="@+id/tvPlayersLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/players"
        android:textSize="22sp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinNumberOfPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/table_row_vertical_margin"
        android:layout_marginBottom="@dimen/table_row_vertical_margin"
        android:padding="@dimen/table_row_all_margin"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/llPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>

    <TextView
        android:id="@+id/tvRoundsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rounds"
        android:textSize="22sp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinNumberOfRounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/table_row_vertical_margin"
        android:layout_marginBottom="@dimen/table_row_vertical_margin"
        android:padding="@dimen/table_row_all_margin"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnNextFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadScoreboardFragment"
        android:text="@string/start_game"
        android:background="@color/colorAccent"
        android:textColor="@color/colorButtonText"
        android:textSize="16sp"/>

</LinearLayout>